      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <meta property="og:title" content="<%= t.layout.title %>" />
    <meta property="og:description" content="<%= t.layout.description %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.url %>" />
    <meta property="og:image" content="<%= home_url %>/img/og.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@agesic" />
    <meta name="twitter:title" content="<%= t.layout.title %>" />
    <meta name="twitter:description" content="<%= t.layout.description %>" />
    <meta name="twitter:image"  content="<%= home_url %>/img/og.png" />

  </head>
  <body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">

    <!-- Intro Header -->
    <header class="intro  text-center">
      <div class="container">
        <a id="logo" href="http://www.opengovpartnership.org/" target="_blank">Open Goverment Partnership</a>
        <ul class="org_logos">
          <li><a id="agesic" href="http://www.agesic.gub.uy/" target="_blank">Agesic</a></li>
          <li><a id="presidencia" href="https://www.presidencia.gub.uy/" target="_blank">Presidencia</a></li>
          <li><a id="rga" href="http://rga.uy/" target="_blank">Red de gobierno abierto uruguay</a></li>
        </ul>
        <div class="txt">
          <h1>
            <%= t.layout.title1 %><br>
            <%= t.layout.title2 %><br>
            <%= t.layout.title3 %><br>
            <%= t.layout.title4 %>
          </h1>
          <h2>
            <%= t.layout.date1 %><br>
            <%= t.layout.date2 %><br>
            <%= t.layout.date3 %><br>
            <%= t.layout.date4 %>
          </h2>
        </div>
        <% locale = (session[:locale] == 'es') ? 'en' : 'es' %>
        <a href="<%= "#{clean_current_url}?locale=#{locale}" %>" id="english_btn">
          | <%= t.layout.language %>
        </a>
        <a href="/form" class="btn  page-scroll" id="register_btn"><%= t.layout.register %></a>
        <a id="arrow" href="/#form" class="page-scroll">
          <img class="tiny" src="img/arrow.svg" alt="">
        </a>
      </div>
    </header>
    <%= yield %>
    <!-- Footer -->
    <footer>
      <div class="container text-center">
        <ul>
          <li>
            <i class="fa fa-globe"></i>
            <a href="http//agesic.gub.uy/gobiernodigital" target="_blank">
              agesic.gub.uy/gobiernodigital
            </a>
          </li>
          <li>
            <i class="fa fa-globe"></i>
            <a href="http://rga.uy" target="_blank">
              rga.uy
            </a>
          </li>
          <li>
            <i class="fa fa-facebook"></i>
            <a href="https://es-es.facebook.com/agesic.uy" target="_blank">
              /agesic.uy
            </a>
          </li>
          <li>
            <i class="fa fa-twitter"></i>
            <a href="http://www.twitter.com/agesic" target="_blank">
              @agesic
            </a>
          </li>
        </ul>
      </div>
    </footer>
